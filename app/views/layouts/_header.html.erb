<header class="navbar navbar-fixed-top remi-header-top">
  <div class="container">
    <%= link_to "Funny Movies", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li style="color: #fff; padding-top: 15px;">Welcome <%= current_user.email %></li>
          <li class="bg-inverse"><%= link_to "Share a movie", new_movie_path %></li>
          <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% else %>
          <li>
            <%= form_for(:session, url: login_path, html: { class: "form-inline" }) do |f| %>
              <div class="form-group" style="padding-top: 15px;">
              <%= f.email_field :email, class: 'form-control' %>
              </div>
              
              <div class="form-group" style="padding-top: 15px;">
                <%= f.password_field :password, class: 'form-control' %>
              </div>

              <%= f.submit "Log in", class: "btn btn-secondary" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>